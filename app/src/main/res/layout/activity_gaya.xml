<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.asus.myapplication.GayaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Gaya"
                android:padding="16dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaya merupakan dorongan atau tarikan yang akan mempercepat atau memperlambat gerak suatu benda. Ada beberapa gaya yang dipelajari pada materi ini, yaitu: "
                android:textSize="16sp"
                android:padding="16dp"/>
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Gaya Berat"
                android:onClick="openGayaBerat"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Gaya Normal"
                android:onClick="openGayaNormal"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Gaya Gesek"
                android:onClick="openGayaGesek"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Gaya Tegangan Tali"
                android:onClick="openGayaTeganganTali"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Gaya Sentripetal"
                android:onClick="openGayaSentripetal"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        >

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/hometr"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:onClick="openHome"

            />
        <ImageButton
            android:id="@+id/example"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/paper"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:onClick="openSoal"
            />

        <ImageButton
            android:id="@+id/quiz"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/tasktr"
            android:background="#ffffff"
            android:onClick="openQuiz"
            />

        <ImageButton
            android:id="@+id/leaderboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/leaderboardtr"
            android:background="#ffffff"
            android:onClick="openScoreboard"
            />



    </LinearLayout>

</LinearLayout>
